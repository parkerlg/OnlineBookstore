@{
    ViewData["Title"] = "The Online Bookstore";
}

@model IQueryable<Book>

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<div>
    <h3>The following is the list of books included in our bookstore database</h3>
    <table class="table">
        <thead>
            <tr><th>BookId</th><th>Title</th><th>Author</th><th>Publisher</th><th>ISBN</th><th>Classification</th><th>Category</th><th>Price</th></tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
            <tr>
                <td>@x.BookId</td>
                <td>@x.Title</td>
                <td>@x.Author</td>
                <td>@x.Publisher</td>
                <td>@x.ISBN</td>
                <td>@x.Classification</td>
                <td>@x.Category</td>
                <td>$@x.Price</td>
            </tr>
            }
        </tbody>
     </table>
</div>
